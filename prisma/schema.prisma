generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") //ignore this error and do not do not do not upgrade to Prisma 7 :)
}

model Account {
  id           Int       @id @default(autoincrement())
  first_name   String
  last_name    String
  email        String
  phone_number String?
  password     String
  dob          DateTime?

  reset_password Boolean? @default(false)

  is_deleted Boolean   @default(false)
  created_at DateTime  @default(now())
  updated_at DateTime?

  account_type account_type
  admins       Admin[]
  tokens       token[]
  User         User[]

  @@unique([email])
  @@unique([phone_number])
}

model User {
  id         Int      @unique @default(autoincrement())
  account    Account? @relation(fields: [account_id], references: [id])
  account_id Int      @id
}

model Admin {
  id         Int      @default(autoincrement())
  account    Account? @relation(fields: [account_id], references: [id])
  account_id Int      @id
}

model token {
  id          Int      @id @default(autoincrement())
  token_data  String?
  expiry_date DateTime

  is_deleted Boolean   @default(false)
  created_at DateTime  @default(now())
  updated_at DateTime?

  account          Account    @relation(fields: [account_id], references: [id])
  account_id       Int
  related_token_id Int?
  related_token    token?     @relation("token", fields: [related_token_id], references: [id])
  token_type       token_type

  tokens token[] @relation("token")
}

enum token_type {
  access
  refresh
  otp
}

enum account_type {
  admin
  user
}
